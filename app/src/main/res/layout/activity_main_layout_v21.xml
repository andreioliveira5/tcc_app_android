<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/activity_layut_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Ligar/Desligar"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/activity_switch_ONOF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="#7DB669"
            android:trackTint="#89fa61"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_laout_identacao_distancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/activity_layout_distancia"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bordars_radius"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adctivity_bluetooth_distancia_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="Distáncia Percorida: "
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_bluetooth_text_distance_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_laout_identacao_bateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="355dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/activity_layout_bateria"
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:background="@drawable/bordars_radius"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adctivity_bluetooth_bateria_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="Nível da Bateria: "
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="2dp"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="410dp"
        android:layout_height="244dp"
        android:src="@mipmap/ic_banner_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="78dp" />

    <LinearLayout
        android:id="@+id/activity_layout_botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_botao_atualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7DB669"
            android:text="Atualizar"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/activity_botao_conectar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7DB669"
            android:text="@string/activity_conexao"
            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>