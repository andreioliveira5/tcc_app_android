<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/activity_layut_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_text_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/ligar_desligar"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/activity_bluetooth_switch_ONOF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="#7DB669"
            android:trackTint="#89fa61"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_laout_identacao_distancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="355dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/activity_layout_distancia"
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:background="@drawable/bordars_radius">

            <TextView
                android:id="@+id/adctivity_bluetooth_distancia_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/dist_ncia_percorida"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_bluetooth_text_distance_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_laout_identacao_bateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/activity_layout_bateria"
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:background="@drawable/bordars_radius"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adctivity_bateria_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/n_vel_da_bateria"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_bluetooth_text_bateria_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.446"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="410dp"
        android:layout_height="244dp"
        android:src="@mipmap/ic_banner_logo"
        android:layout_marginTop="50dp"
         />

    <LinearLayout
        android:id="@+id/activity_layout_botoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_botao_atualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7DB669"
            android:text="Atualizar"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/activity_botao_conectar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7DB669"
            android:text="@string/activity_conexao"
            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>